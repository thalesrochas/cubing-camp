mixin listCamps(title, competitions)
  .col-12.col-lg-4.inside-body.h-100
    .jumbotron.bg-gray-transp.py-2.m-0
      h3.text-center.pt-2
        strong
          | #{title}
      hr.my-4
      .competitions.p-1
        for comp in competitions
          a(href=`/comp/${comp.id}`).aclickable
            div.clickable.p-2.w-100
              span
                | #{comp.name}
              br
              span
                | #{comp.date}
          hr

